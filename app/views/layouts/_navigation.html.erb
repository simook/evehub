<ul class="nav">
  <% if user_signed_in? %>
    <li><%= active_link_to 'Home', root_path %></li>
    <li><%= active_link_to 'Corp', corporation_index_path %></li>
  <% else %>
    <li><%= active_link_to 'Home', root_path %></li>
    <li><%= active_link_to 'Sign Up', register_path %></li>
  <% end %>
</ul>
<ul class="nav pull-right">
  <% if user_signed_in? %>
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= current_user.username %> <b class="caret"></b></a>
      <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
        <li><%= active_link_to 'Your Account', account_path %></li>
        <% if current_user.has_role? :admin %>
          <li><%= active_link_to 'Admin', admin_users_path %></li>
        <% end %>
        <li class="divider"></li>
        <li><%= active_link_to 'Logout', logout_path, :method=>'delete' %></li>
      </ul>
    </li>
  <% else %>
    <li><%= active_link_to 'Login', login_path %></li>
  <% end %>
</ul>
