<div class="row">
  <div class="span12">
    <div class="page-header">
      <h2>Sign Up</h2>
    </div>
    <p class="lead">This will take only a minute.</p>
  </div>
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal clearfix' }) do |f| %>
  <div class="span12 reg-step">
    <div class="row">
      <div class="span6">
        <h3>Step 1</h3>
        <p class="muted">Please fill in the general account information. You'll recieve a verification email after signing up.</p>
        <p class="mt20">* All fields are required</p>
      </div>
      <div class="span6">
        <%= f.error_notification %>
        <%= f.input :username, :autofocus => true, :required => true %>
        <%= f.input :email, :required => true %>
        <%= f.input :password, :required => true %>
        <%= f.input :password_confirmation, :required => true %>
      </div>
    </div>
  </div>
  <div class="span12 reg-step">
    <div class="row">
      <div class="span12">
        <h3>Step 2</h3>
        <p class="muted">Select the type of account you want to create.</p>
        <div class="tabbable tabs-left account-type">
          <ul class="nav nav-tabs">
            <li><a href="#tab1" data-toggle="tab">Test</a></li>
            <li><a href="#tab2" data-toggle="tab">Basic</a></li>
            <li><a href="#tab3" data-toggle="tab">Enyo</a></li>
            <li><a href="#tab4" data-toggle="tab">Thorax</a></li>
            <li><a href="#tab5" data-toggle="tab">Myrmidon</a></li>
            <li><a href="#tab6" data-toggle="tab">Erebus</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane" id="tab1">
              <ul class="features-list">
                <li>Member Limit <b class="pull-right">1</b></li>
                <li>Access all your character information <i class="pull-right icon-ok text-success"></i></li>
                <li>Access all your corporation information <small class="muted">(CEO or Director API required)</small><i class="pull-right icon-ok text-success"></i></li>
                <li class="muted">Custom EVE hub subdomain & member signup page</li>
                <li class="muted">Member EVE API management</li>
                <li class="muted">Automated EVE API data retrival & indexing</i></li>
              </ul>
            </div>
            <div class="tab-pane" id="tab2">
              <ul class="features-list">
                <li>Member Limit <b class="pull-right">10</b></li>
                <li>Access all your character information <i class="pull-right icon-ok text-success"></i></li>
                <li>Access all your corporation information <small class="muted">(CEO or Director API required)</small><i class="pull-right icon-ok text-success"></i></li>
                <li>Custom EVE hub subdomain & member signup page <i class="pull-right icon-ok text-success"></i></li>
                <li>Member EVE API management <i class="pull-right icon-ok text-success"></i></li>
                <li>Automated EVE API data retrival & indexing <i class="pull-right icon-ok text-success"></i></li>
              </ul>
            </div>
            <div class="tab-pane" id="tab3">
              <ul class="features-list">
                <li>Member Limit <b class="pull-right">20</b></li>
                <li>Access all your character information <i class="pull-right icon-ok text-success"></i></li>
                <li>Access all your corporation information <small class="muted">(CEO or Director API required)</small><i class="pull-right icon-ok text-success"></i></li>
                <li>Custom EVE hub subdomain & member signup page <i class="pull-right icon-ok text-success"></i></li>
                <li>Member EVE API management <i class="pull-right icon-ok text-success"></i></li>
                <li>Automated EVE API data retrival & indexing <i class="pull-right icon-ok text-success"></i></li>
              </ul>
            </div>
            <div class="tab-pane" id="tab4">
              <ul class="features-list">
                <li>Member Limit <b class="pull-right">30</b></li>
                <li>Access all your character information <i class="pull-right icon-ok text-success"></i></li>
                <li>Access all your corporation information <small class="muted">(CEO or Director API required)</small><i class="pull-right icon-ok text-success"></i></li>
                <li>Custom EVE hub subdomain & member signup page <i class="pull-right icon-ok text-success"></i></li>
